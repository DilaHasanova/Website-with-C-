
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

@using CoffeSite.Models;
@model  List<About>
<div class="allinside" id="about">
    @foreach (var item in Model)
    {
    <h2 style="text-align: center; font-size: 50px;line-height: 30px;  color: #DB9A64; margin-bottom: 40px;">
        @item.AboutTitle
    </h2>
        <div class="col-md-6">
            <h3>Welcome To <span>Coffee Purple</span></h3>
            <h4>Little Story</h4>
            <p style="font-size: 16px; margin-bottom:40px;">
                @item.AboutContent
            </p>
            <a href="~/Home/Reservation">Reservation</a>
        </div>
        <div class="col-md-6">
            <img  style="width: 500px; margin-top:70px;" src="~/Content/CoffeePhoto/@item.AboutPhoto" />
                
        </div>
    }
    </div>

