
@{
    ViewBag.Title = "Reservation";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<div class="reservationintitle" id="reservation">
    <h2 style="text-align: center; font-size: 50px;line-height: 30px;  color: #DB9A64; margin-bottom: 40px;">
        Reservation
    </h2>
    <div class="all">

        <div class="map5left">
            <iframe width="550" height="450" id="gmap_canvas" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?q=Azerbaijan%20Baku%20Purple%20k-pop%20cafe%20and%20shop&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.whatismyip-address.com"></a><br>
        </div>
        <div class="map5right">
            <h3>
                Book a Table
            </h3>
            <form action="~/Home/Reservation" method="post">

                <div class="rsrvtn">

                    <input type="text" placeholder="Full Name" name="RsrvtnName">
                    <input type="text" placeholder="Phone no." name="RsrvtnPhone">
                    <input id="datepicker2" type="date" placeholder="Date" data-type="datepicker"
                           data-guid="e98c38c7-b228-793b-0ad0-1d2c56f31642" data-datepicker="true"
                           class="gj-textbox-md" role="input" name="Rsrvtndate">
                    <input type="text" placeholder="Time" name="RsrvtnTime">

                    <textarea name="RsrvtnMessage" placeholder="Your Message" data-display="Message" style="width: 84%;" class="wide"></textarea>
                </div>
                <div class="col-xl-12 contactbutton">
                    <button class="sumbit" type="submit">Book</button>
                </div>
            </form>


        </div>
    </div>
</div>

