
@{
    ViewBag.Title = "AdminMenu";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="container">
        <div class="panel-body">
            <form action="~/Admin/AdminMenu" method="post" style="width:88%;" enctype="multipart/form-data">
                <div class="form-group col-md-3">
                    <label>Ad</label>
                    <input name="SweetsName" value="" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label>Terkib</label>
                    <input name="SweetsContent" value="" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label>Qiymet</label>
                    <input name="SweetsPrice" value="" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label>Photo</label>
                    <input name="SweetsPhoto" value="" type="file" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label for="sel1">Kateqoriyani secin</label>
                    <select class="form-control" id="sel1" name="SweetsCategoriaId" value="">
                        <option disabled selected value="-1">Kateqoriyani secin</option>
                        @foreach (var item in ViewBag.Categoria)
                        {
            <option value="@item.CategoriaId">@item.CategoriaName</option>}
                    </select>
                </div>
                <button type="submit" class="btn btn-success" Text="Gonder" style="margin:25px; width:70px; height:35px; color:#fff;">Gonder</button>
            </form>
        </div>
    </div>
</div>

