
@{
    ViewBag.Title = "BlogsAdmin";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using CoffeSite.Models;
@model  List<Blog>

<h2 style="color:#000; font-weight:600;margin-bottom:50px;">
    Blogs
</h2>
<div class="ABOUT">
    <form action="~/Admin/BlogsAdmin" method="post" enctype="multipart/form-data">
        <div class="form-group col-md-3">
            <label>Title</label>
            <input runat="server" id="title" type="text" class="form-control" name="BlogsTitle" required autocomplete="on" />
        </div>
        <div class="form-group col-md-3">
            <label>Main</label>
            <input runat="server" id="title" type="text" class="form-control" name="BlogsMain" required autocomplete="on" />
        </div>
        <div class="form-group col-md-3">
            <label>Content</label>
            <textarea required autocomplete="on" style="width: 230px; height: 100px;" runat="server" class="form-control" rows="3" id="text" name="BlogsContent"></textarea>
        </div>
        <div class="form-group col-md-3">
            <label>Date</label>
            <input runat="server" id="title" type="date" class="form-control" name="BlogsDate" required autocomplete="on" />
        </div>
        <div class="form-group col-md-3">
            <label>Photo</label>
            <input name="BlogsPhoto" type="file" class="form-control" required autocomplete="on" />
        </div>
        <button type="submit" class="btn btn-success" style="margin-top:20px;">Change Button</button>
    </form>
</div>
<style>
    .ABOUT input {
        width: 230px;
        height: 100px;
    }
</style>

