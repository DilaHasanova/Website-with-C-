
@{
    ViewBag.Title = "BlogEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using CoffeSite.Models
@model List<Blog>

<div class="panel panel-default">
    <div class="container">
        <div class="panel-body">
            <form action="~/Admin/BlogEdit/@Model[0].BlogsID" method="post" style="width:88%;" enctype="multipart/form-data">
                <div class="form-group col-md-3">
                    <label>Title</label>
                    <input name="BlogsTitle" value="@Model[0].BlogsTitle" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label>Main</label>
                    <input name="BlogsMain" value="@Model[0].BlogsMain" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label>Content</label>
                    <input name="BlogsContent" value="@Model[0].BlogsContent" type="text" class="form-control" />
                </div>
                <div class="form-group col-md-3">
                    <label>Date</label>
                    <input name="BlogsDate" value="@Model[0].BlogsDate" type="text" class="form-control" />
                </div>

                <div class="form-group col-md-3">
                    <label>Photo"</label>
                    <input name="BlogsPhoto" value="@Model[0].BlogsPhoto" type="file" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success" Text="Gonder" style="margin:25px; width:70px; height:35px; color:#fff;">Gonder</button>
            </form>
        </div>
    </div>
</div>

